# 使用官方Python镜像作为基础镜像
FROM python:3.9

# 设置工作目录
WORKDIR /app

#COPY ./app ./app
#COPY ./configs ./configs
#COPY ./deploy ./deploy
#COPY ./agents ./agents
#COPY ./tools ./tools
#COPY ./docker ./docker
#COPY ./memory ./memory
#COPY ./prompts ./prompts
#COPY ./web ./web
# 复制当前目录下的所有文件到容器中的/app
COPY . /app


COPY ["./requirements.txt","./main.py","./"]
RUN /opt/venv/bin/pip install --no-cache-dir --upgrade pip \
    && /opt/venv/bin/pip install --no-cache-dir -r requirements.txt
#ENV ENV_FILE_PATH=deploy/qa.env

CMD ["python", "main.py"]

